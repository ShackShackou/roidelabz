                <div className="border rounded p-3 cursor-pointer overflow-hidden col-span-2" onClick={() => setEditingField(editingField === 'tags' ? null : 'tags')}>
                  {editingField !== 'tags' && (
                    <div>
                      <p className="text-xs text-gray-500 mb-1">Activités ({selectedPokemon.tags.length})</p>
                      {selectedPokemon.tags.length > 0 ? (
                        <div className="flex flex-wrap gap-1">
                          {selectedPokemon.tags.slice(0, 10).map((tag: string, i: number) => (
                            <span 
                              key={i} 
                              className={`text-xs px-2 py-1 rounded-full ${
                                ['Fellation', 'Sodomie', 'BDSM', '69', 'Trio', 'Levrette', 'Amazone', 'Cowgirl', 'Soumise', 'Dominatrice'].includes(tag) 
                                  ? 'bg-pink-100 text-pink-800 font-medium' 
                                  : 'bg-gray-100 text-gray-700'
                              }`}
                            >
                              {tag}
                            </span>
                          ))}
                          {selectedPokemon.tags.length > 10 && (
                            <span className="text-xs px-2 py-1 rounded-full bg-gray-100 text-gray-700">
                              +{selectedPokemon.tags.length - 10}
                            </span>
                          )}
                        </div>
                      ) : (
                        <span className="text-xs text-gray-500">Touchez pour ajouter des activités</span>
                      )}
                    </div>
                  )}
                </div>
              </div>
              
              <div className="mb-4">
                <h3 className="text-sm font-medium mb-2">Stats</h3>
                <div className="space-y-3">
                  {Object.entries(selectedPokemon.stats).map(([stat, value]) => (
                    <div key={stat} className="space-y-1">
                      <div className="flex justify-between text-xs">
                        <span className="capitalize">{stat}</span>
                        <span>{value}/100</span>
                      </div>
                      <input 
                        type="range" 
                        min="0" 
                        max="100" 
                        value={value} 
                        onChange={(e) => updatePokemonNestedField(
                          selectedPokemon.id, 
                          'stats', 
                          stat, 
                          parseInt(e.target.value)
                        )}
                        className="w-full h-2 accent-zinc-600"
                        title={`Ajuster ${stat}`}
                      />
                    </div>
                  ))}
                </div>
              </div>
              
              <div className="mb-4">
                <h3 className="text-sm font-medium mb-2">Description</h3>
                {editingField === 'description' ? (
                  <textarea 
                    id={`pokemon-description-${selectedPokemon.id}`}
                    name={`pokemon-description-${selectedPokemon.id}`}
                    className="w-full p-3 border rounded focus:outline-none focus:ring-2 focus:ring-zinc-300 text-sm"
                    value={selectedPokemon.description}
                    onChange={(e) => updatePokemonField(selectedPokemon.id, 'description', e.target.value)}
                    rows={4}
                    autoFocus
                    onBlur={() => setEditingField(null)}
                    placeholder="Ajoutez une description..."
                    title="Modifier la description"
                  />
                ) : (
                  <div 
                    className="p-3 border rounded bg-gray-50 text-sm cursor-pointer"
                    onClick={() => toggleEditField('description')}
                  >
                    {selectedPokemon.description || "Ajoutez une description..."}
                  </div>
                )}
              </div>
            </div>
          </div>
        </div>
      )}

      {/* Modales d'export/import */}
      {showExportModal && (
        <div 
          className="fixed inset-0 flex items-center justify-center bg-black/70 z-20 p-4"
          onClick={(e) => {
            if (e.target === e.currentTarget) {
              toggleExportModal();
            }
          }}
        >
          <div className="bg-white w-full max-w-sm rounded-lg shadow-lg p-5">
            <h3 className="text-lg font-medium mb-3">Exporter vos profils</h3>
            <p className="text-sm text-gray-600 mb-4">Téléchargez toutes vos profils dans un fichier JSON.</p>
            <div className="flex justify-end gap-2">
              <button 
                onClick={toggleExportModal}
                className="px-4 py-2 border border-zinc-300 rounded-md text-sm"
                title="Annuler"
              >
                Annuler
              </button>
              <button 
                onClick={exportData}
                className="px-4 py-2 bg-green-500 text-white rounded-md text-sm"
                title="Exporter"
              >
                Exporter
              </button>
            </div>
          </div>
        </div>
      )}

      {/* Modal d'import */}
      {showImportModal && (
        <div className="fixed inset-0 flex items-center justify-center bg-black/70 z-20 p-4">
          <div className="bg-white w-full max-w-sm rounded-lg shadow-lg p-5">
            <h3 className="text-lg font-medium mb-3">Importer des profils</h3>
            <p className="text-sm text-gray-600 mb-4">Chargez vos profils depuis un fichier JSON, CSV ou Excel.</p>
            
            <div className="mb-4 p-4 border border-dashed border-gray-300 rounded-lg text-center">
              <label htmlFor="import-file" className="cursor-pointer flex flex-col items-center">
                <Upload size={24} className="text-gray-400 mb-2" />
                <span className="text-sm text-gray-500">Cliquez pour sélectionner un fichier</span>
                <input 
                  id="import-file"
                  name="import-file"
                  type="file"
                  accept=".json,.csv,.xlsx"
                  onChange={importData}
                  className="hidden"
                />
              </label>
            </div>
            
            <div className="flex justify-end">
              <button 
                onClick={toggleImportModal}
                className="px-4 py-2 border border-zinc-300 rounded-md text-sm"
                title="Annuler"
              >
                Annuler
              </button>
            </div>
          </div>
        </div>
      )}

      {/* Modal pour ajouter un nouveau Profil */}
      {showAddForm && (
        <div 
          className="fixed inset-0 flex items-center justify-center bg-black/70 z-20 p-4"
          onClick={(e) => {
            if (e.target === e.currentTarget) {
              toggleAddForm();
            }
          }}
        >
          <div className="bg-white w-full max-w-md rounded-lg shadow-lg p-5">
            <div className="flex justify-between items-center mb-4">
              <h3 className="text-lg font-medium">Ajouter un nouveau profil</h3>
              <button 
                onClick={toggleAddForm}
                className="p-2 rounded-full hover:bg-gray-100"
                title="Fermer"
              >
                <X size={20} />
              </button>
            </div>
            
            <div className="flex justify-center mb-4">
              <div className="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center relative group cursor-pointer" style={{ aspectRatio: '1/1' }}>
                <div className="text-2xl font-bold text-gray-400">+</div>
                <label htmlFor="new-photo-upload" className="absolute inset-0 flex items-center justify-center bg-black/50 text-white opacity-0 group-hover:opacity-100 rounded-full cursor-pointer transition-opacity">
                  <Camera size={20} />
                  <span className="sr-only">Ajouter une photo</span>
                </label>
                <input 
                  id="new-photo-upload" 
                  type="file" 
                  accept="image/*,.gif" 
                  className="hidden" 
                  onChange={(e) => {
                    // Traitement de l'image avant l'ajout du profil
                    if (e.target.files && e.target.files[0]) {
                      const file = e.target.files[0];
                      
                      // Vérification de la taille du fichier (max 5MB)
                      if (file.size > 5 * 1024 * 1024) {
                        alert("Le fichier est trop volumineux. Veuillez choisir une image de moins de 5MB.");
                        return;
                      }
                      
                      // Détection des GIFs pour le nouvel élément
                      const isGifImage = file.type === 'image/gif';
                      const reader = new FileReader();
                      
                      reader.onload = (event) => {
                        if (event.target && event.target.result) {
                          const imageData = event.target.result.toString();
                          
                          // Stockage temporaire de l'image
                          const imageUploadPreview = document.getElementById('image-upload-preview');
                          if (imageUploadPreview) {
                            imageUploadPreview.style.backgroundImage = `url(${imageData})`;
                            imageUploadPreview.style.backgroundSize = 'cover';
                            imageUploadPreview.style.backgroundPosition = 'center';
                            // Stockage de l'image dans un attribut data pour récupération lors de l'ajout
                            // Pour les GIFs, stocker également cette information
                            if (isGifImage) {
                              const gifData: ImageEditorData = {
                                type: 'gif',
                                originalSrc: imageData,
                                position: { x: 0, y: 0 },
                                zoomFactor: 1
                              };
                              imageUploadPreview.setAttribute('data-image', JSON.stringify(gifData));
                              imageUploadPreview.setAttribute('data-is-gif', 'true');
                            } else {
                              imageUploadPreview.setAttribute('data-image', imageData);
                              imageUploadPreview.setAttribute('data-is-gif', 'false');
                            }
                          }
                        }
                      };
                      
                      reader.onerror = (error) => {
                        console.error("Erreur de lecture du fichier:", error);
                        alert("Une erreur est survenue lors de la lecture du fichier. Veuillez réessayer.");
                      };
                      
                      reader.readAsDataURL(file);
                    }
                  }}
                />
                <div id="image-upload-preview" className="absolute inset-0 rounded-full" style={{ aspectRatio: '1/1' }}></div>
              </div>
            </div>
            
            <div className="flex justify-center mb-4">
              <button
                className="w-full py-2.5 bg-green-500 text-white rounded-md text-sm"
                onClick={() => {
                  // Récupération de l'image depuis l'élément preview
                  const imageUploadPreview = document.getElementById('image-upload-preview');
                  const imageData = imageUploadPreview ? imageUploadPreview.getAttribute('data-image') || undefined : undefined;
                  const isGifPreview = imageUploadPreview && imageUploadPreview.getAttribute('data-is-gif') === 'true';
                  
                  // Création d'un nouveau profil avec l'image si disponible
                  const newId = Math.max(...pokemons.map(p => p.id)) + 1;
                  const newPokemon: Pokemon = {
                    id: newId,
                    name: 'Nouveau profil',
                    nameJp: '新しい', 
                    type: 'Créative',
                    rarity: 'Sociable',
                    power: 50,
                    height: '165 cm',
                    weight: 'Moyenne',
                    city: 'Paris',
                    favorite: false,
                    abilities: ['Initiative', 'Spontanéité', 'Charisme'],
                    stats: { initiative: 50, discrétion: 50, spontanéité: 50 },
                    description: 'Ajoutez une description...',
                    customImage: imageData ? true : false,
                    imageData: imageData,
                    score: 50,
                    tags: ['À classer'],
                    meetingDate: new Date().toISOString().split('T')[0]
                  };
                  
                  setPokemons([...pokemons, newPokemon]);
                  setSelectedPokemon(newPokemon);
                  setShowAddForm(false);
                }}
                className="w-full bg-green-500 text-white py-3 rounded-lg hover:bg-green-600 transition-colors"
              >
                Ajouter
              </button>
            </div>
          </div>
        </div>
      )}

      {/* Barre de navigation */}
      <div className="bg-white shadow-md border-t border-stone-200 py-2 sticky bottom-0 z-10">
        <div className="flex justify-around">
          <button 
            className={`flex flex-col items-center justify-center px-3 py-1 ${activeTab === 'home' ? 'text-zinc-800' : 'text-zinc-400'}`}
            onClick={() => setActiveTab('home')}
          >
            <Shield size={22} />
            <span className="text-[10px] mt-1">Collection</span>
          </button>
          <button 
            className={`flex flex-col items-center justify-center px-3 py-1 ${activeTab === 'favorites' ? 'text-zinc-800' : 'text-zinc-400'}`}
            onClick={() => setActiveTab('favorites')}
          >
            <Star size={22} />
            <span className="text-[10px] mt-1">Favoris</span>
          </button>
          <button 
            className="flex flex-col items-center justify-center px-3 py-1 bg-zinc-800 text-white rounded-full -mt-4 w-14 h-14 shadow-md border-4 border-white"
            onClick={toggleAddForm}
          >
            <Plus size={22} />
            <span className="text-[10px] mt-0">Ajouter</span>
          </button>
          <button 
            className={`flex flex-col items-center justify-center px-3 py-1 ${activeTab === 'battles' ? 'text-zinc-800' : 'text-zinc-400'}`}
            onClick={() => setActiveTab('battles')}
          >
            <Map size={22} />
            <span className="text-[10px] mt-1">Carte</span>
          </button>
          <div className="flex flex-col items-center">
            <div className="flex">
              <button 
                onClick={toggleExportModal} 
                className={`flex items-center justify-center px-2 py-1 ${activeTab === 'export' ? 'text-zinc-800' : 'text-zinc-400'}`}
                title="Exporter les données"
              >
                <Download size={22} />
              </button>
              <button 
                onClick={toggleImportModal} 
                className={`flex items-center justify-center px-2 py-1 ${activeTab === 'import' ? 'text-zinc-800' : 'text-zinc-400'}`}
                title="Importer des données"
              >
                <Upload size={22} />
              </button>
            </div>
            <span className="text-[10px]">Import/Export</span>
          </div>
        </div>
      </div>

      {/* Overlay pour fermer le menu d'édition des tags en cliquant ailleurs */}
      {editingField === 'tags' && (
        <div 
          className="fixed inset-0 z-10" 
          onClick={() => setEditingField(null)}
        ></div>
      )}

      {/* Modal de sélection des activités */}
      {editingField === 'tags' && selectedPokemon && (
        <div 
          className="fixed inset-0 flex items-center justify-center bg-black/50 z-30"
          onClick={() => setEditingField(null)}
        >
          <div 
            className="bg-white rounded-lg shadow-xl w-full max-w-md max-h-[80vh] overflow-hidden flex flex-col"
            onClick={(e) => e.stopPropagation()}
          >
            <div className="p-4 border-b border-gray-200 flex justify-between items-center">
              <h3 className="text-lg font-medium">Activités</h3>
              <button 
                onClick={() => setEditingField(null)}
                className="p-2 rounded-full hover:bg-gray-100 transition-colors"
                title="Fermer"
              >
                <X size={20} />
              </button>
            </div>
            
            <div className="p-3 overflow-y-auto flex-1">
              {/* Groupes de tags par catégorie */}
              {['Rencontre', 'App', 'Relation', 'Intime', 'Position'].map(category => (
                <div key={category} className="mb-4">
                  <h4 className="text-sm font-semibold mb-2 text-gray-700">{category}</h4>
                  <div className="flex flex-wrap gap-2">
                    {customTags
                      .filter(item => item.category === category)
                      .map(item => (
                        <button
                          key={item.tag}
                          className={`text-xs px-3 py-1.5 rounded-full transition-colors ${
                            selectedPokemon.tags.includes(item.tag)
                              ? category === 'Intime' || category === 'Position'
                                ? 'bg-pink-500 text-white'
                                : 'bg-zinc-700 text-white'
                              : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                          }`}
                          onClick={() => {
                            const updatedTags = selectedPokemon.tags.includes(item.tag)
                              ? selectedPokemon.tags.filter((t: string) => t !== item.tag)
                              : [...selectedPokemon.tags, item.tag];
                            updatePokemonField(selectedPokemon.id, 'tags', updatedTags);
                          }}
                        >
                          {item.tag}
                        </button>
                      ))}
                  </div>
                </div>
              ))}
            </div>
            
            <div className="p-3 border-t border-gray-200 bg-gray-50">
              <button
                className="w-full py-2.5 bg-green-500 text-white rounded-md text-sm"
                onClick={() => setEditingField(null)}
              >
                <Check size={18} />
                Terminé ({selectedPokemon.tags.length} sélectionnée{selectedPokemon.tags.length !== 1 ? 's' : ''})
              </button>
            </div>
          </div>
        </div>
      )}
      
      {/* Ajout du modal pour l'éditeur d'image */}
      {isEditingImage && imageToEdit && (
        <div 
          className="fixed inset-0 flex items-center justify-center bg-black/70 z-30 p-4"
          onClick={(e) => {
            if (e.target === e.currentTarget) {
              closeImageEditor();
            }
          }}
        >
          <div className="bg-white w-full max-w-sm rounded-lg shadow-lg p-5">
            <h3 className="text-lg font-medium mb-3">Ajuster votre photo</h3>
            
            {/* Conteneur principal centré */}
            <div className="flex justify-center mb-5">
              {/* Cercle parfait avec dimensions fixes */}
              <div 
                style={{
                  width: '270px',
                  height: '270px',
                  borderRadius: '50%',
                  overflow: 'hidden',
                  position: 'relative',
                  border: '3px solid #d1d5db',
                  cursor: isDragging ? 'grabbing' : 'grab'
                }}
                onMouseDown={handleDragStart}
                onMouseMove={handleDragMove}
                onMouseUp={handleDragEnd}
                onMouseLeave={handleDragEnd}
              >
                {/* Image avec transformations */}
                <div
                  style={{
                    position: 'absolute',
                    width: '100%',
                    height: '100%',
                    transform: `translate(${imagePosition.x}px, ${imagePosition.y}px) scale(${zoomFactor})`,
                    backgroundImage: `url(${imageToEdit})`,
                    backgroundPosition: 'center',
                    backgroundSize: 'cover'
                  }}
                ></div>
              </div>
            </div>

            <div className="text-center text-sm text-gray-500 mb-4">
              Faites glisser l'image pour la repositionner
            </div>
            
            <div className="flex justify-center mb-4">
              <div className="flex items-center space-x-4">
                <button 
                  className="bg-gray-200 hover:bg-gray-300 rounded-full p-1"
                  onClick={decreaseZoom}
                >
                  <Minus size={20} />
                </button>
                <span className="text-sm font-medium">Zoom: {Math.round(zoomFactor * 100)}%</span>
                <button 
                  className="bg-gray-200 hover:bg-gray-300 rounded-full p-1"
                  onClick={increaseZoom}
                >
                  <Plus size={20} />
                </button>
              </div>
            </div>
            
            <div className="flex justify-between pt-3">
              <button
                className="px-4 py-2 border border-gray-300 rounded-md text-sm"
                onClick={closeImageEditor}
              >
                Annuler
              </button>
              <button
                className="px-4 py-2 bg-green-500 text-white rounded-md text-sm"
                onClick={validateImageEdit}
              >
                Valider
              </button>
            </div>
          </div>
        </div>
      )}
    </div>
  );
};

export default function Page() {
  return <RoisDeLaBZ />;
} 