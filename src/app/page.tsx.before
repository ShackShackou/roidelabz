              id={`edit-${field}-${id}`}
              type="date"
              className="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-zinc-300 text-base"
              value={value}
              onChange={(e) => updatePokemonField(id, field, e.target.value)}
              autoFocus
              onBlur={() => setEditingField(null)}
              title={`Modifier la ${label.toLowerCase()}`}
            />
          </div>
        );
      } else if (options && options.length > 0) {
        return (
          <div className="relative w-full p-2 rounded bg-white border shadow-sm">
            <label htmlFor={`edit-${field}-${id}`} className="text-xs text-gray-500 mb-1 block">{label}</label>
            <select 
              id={`edit-${field}-${id}`}
              className="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-zinc-300 text-base"
              value={value}
              onChange={(e) => {
                updatePokemonField(id, field, e.target.value);
                setEditingField(null);
              }}
              autoFocus
              title={`Sélectionner ${label}`}
            >
              {options.map((option) => (
                <option key={option} value={option}>{option}</option>
              ))}
            </select>
          </div>
        );
      } else {
        return (
          <div className="relative w-full p-2 rounded bg-white border shadow-sm">
            <label htmlFor={`edit-${field}-${id}`} className="text-xs text-gray-500 mb-1 block">{label}</label>
            <input 
              id={`edit-${field}-${id}`}
              type={field === 'score' || field === 'power' ? 'number' : 'text'}
              className="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-zinc-300 text-base"
              value={value}
              min={field === 'score' || field === 'power' ? 0 : undefined}
              max={field === 'score' || field === 'power' ? 100 : undefined}
              onChange={(e) => updatePokemonField(id, field, e.target.value)}
              autoFocus
              onBlur={() => setEditingField(null)}
              placeholder={`Entrez ${label.toLowerCase()}`}
              title={`Entrez ${label.toLowerCase()}`}
            />
          </div>
        );
      }
    }
    
    return (
      <div 
        className="p-2 rounded bg-white border hover:bg-gray-50 cursor-pointer shadow-sm"
        onClick={() => toggleEditField(field)}
      >
        <p className="text-xs text-gray-500">{label}</p>
        <p className={`font-medium ${field === 'rarity' ? getRarityStyle(value) : ''}`}>
          {field === 'meetingDate' 
            ? formatDate(value) // Utiliser la nouvelle fonction formatDate 
            : value
          } {field === 'power' ? '✨' : ''}
        </p>
      </div>
    );
  };

  // Fonctions pour l'éditeur d'image
  const openImageEditor = (imageUrl: string, id: number) => {
    setImageToEdit(imageUrl);
    setProfileIdToEdit(id);
    setImagePosition({ x: 0, y: 0 });
    setZoomFactor(1);
    setIsEditingImage(true);
  };

  const closeImageEditor = () => {
    setIsEditingImage(false);
    setImageToEdit(null);
    setProfileIdToEdit(null);
  };

  const decreaseZoom = () => {
    setZoomFactor(Math.max(0.5, zoomFactor - 0.1));
  };

  const increaseZoom = () => {
    setZoomFactor(Math.min(3, zoomFactor + 0.1));
  };

  const handleDragStart = (e: React.MouseEvent<HTMLDivElement>) => {
    setIsDragging(true);
    setDragStart({ x: e.clientX, y: e.clientY });
  };

  const handleDragMove = (e: React.MouseEvent<HTMLDivElement>) => {
    if (isDragging) {
      const deltaX = e.clientX - dragStart.x;
      const deltaY = e.clientY - dragStart.y;
      
      setImagePosition({
        x: imagePosition.x + deltaX,
        y: imagePosition.y + deltaY
      });
      
      setDragStart({ x: e.clientX, y: e.clientY });
    }
  };

  const handleDragEnd = () => {
    setIsDragging(false);
  };

  const validateImageEdit = () => {
    if (profileIdToEdit !== null && imageToEdit) {
      // Créer un objet avec les données d'image
      const imageData: ImageEditorData = {
        originalSrc: imageToEdit,
        position: imagePosition,
        zoomFactor: zoomFactor
      };
      
      // Sauvegarder les données en JSON
      const imageDataJson = JSON.stringify(imageData);
      
      // Mettre à jour l'image du profil
      updatePokemonField(profileIdToEdit, 'imageData', imageDataJson);
      
      // Fermer l'éditeur
      closeImageEditor();
    }
  };

  return (
    <div className="fixed inset-0 flex flex-col bg-gray-50 text-zinc-800 max-w-lg mx-auto shadow-xl">
      {/* Barre de recherche */}
      <div className="sticky top-0 z-10 bg-white p-3 border-b border-stone-200 flex items-center">
        <div className="flex-1 flex items-center gap-2 px-2 py-1.5 border border-stone-200 bg-stone-50 rounded-full">
          <Search size={18} className="text-gray-400" />
          <input 
            type="text" 
            placeholder="Rechercher..." 
            className="w-full bg-transparent outline-none text-sm"
            value={searchTerm}
            onChange={handleSearch}
            id="searchTermInput"
            name="searchTermInput"
          />
        </div>
        <button 
          onClick={toggleAddForm} 
          className="ml-3 p-2 text-zinc-600 hover:bg-stone-100 rounded-full"
          title="Ajouter un profil"
        >
          <Camera size={22} />
        </button>
      </div>

      {/* Contenu principal */}
      <div className="flex-1 overflow-auto p-3">
        {viewMode === 'grid' ? (
          <div className="grid grid-cols-2 gap-4">
            {filteredProfiles.map(pokemon => (
              <div 
                key={pokemon.id} 
                className="border border-stone-200 bg-white cursor-pointer rounded-lg overflow-hidden shadow-sm relative" 
                onClick={() => handleSelectPokemon(pokemon)}
              >
                <div className={`h-36 flex flex-col ${getTypeColor(pokemon.type)}`}>
                  {/* Prénom avec position optimisée */}
                  <div className="relative z-30 pt-[6px] pb-1 text-center w-full">
                    <p className="text-lg font-semibold truncate max-w-[90%] mx-auto">{pokemon.name}</p>
                  </div>
                  
                  <div className="flex-grow flex items-center justify-center relative">
                    <div className="text-center w-full flex flex-col items-center h-full pb-3 pt-1">
                      {/* Cercle plus petit et centré avec position fixe */}
                      <div className="relative flex items-center justify-center">
                        {/* Cercle principal avec bordure qui correspond à la couleur du fond */}
                        <div className={`w-24 h-24 rounded-full flex items-center justify-center overflow-hidden relative z-10 border-2 ${getTypeColorBorder(pokemon.type)}`}>
                          <div className="w-24 h-24 rounded-full bg-white/70 flex items-center justify-center overflow-hidden" style={{ aspectRatio: '1/1' }}>
                            {renderProfileImage(pokemon, 'small')}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                
                <div className="p-3">
                  <div className="flex justify-between items-start">
                    <div>
                      <div className="flex items-center gap-1.5">
                        <span className="font-medium text-xs">{pokemon.type}</span>
                      </div>
                      <p className="text-[10px] text-gray-500 mt-0.5">{formatDate(pokemon.meetingDate)}</p>
                    </div>
                    <div className="flex flex-col items-end">
                      <div className="flex items-center gap-1">
                        <span className="text-xs font-medium bg-white/70 text-zinc-800 px-1.5 py-0.5 rounded-sm shadow-sm border border-zinc-100">{pokemon.score}</span>
                        <button 
                          onClick={(e) => {e.stopPropagation(); toggleFavorite(pokemon.id)}}
                          title={pokemon.favorite ? "Retirer des favoris" : "Ajouter aux favoris"}
                          className="flex items-center justify-center"
                        >
                          <Star className={`${pokemon.favorite ? "text-amber-400 fill-amber-400" : "text-gray-300"}`} size={14} />
                        </button>
                      </div>
                    </div>
                  </div>
                  
                  {/* Conteneur central pour équilibrer visuellement */}
                  <div className="flex justify-between items-center mt-2 border-t border-gray-100 pt-1.5">
                    {/* Tags - Simplifiés */}
                    {pokemon.tags && pokemon.tags.length > 0 && (
                      <div className="flex items-center">
                        <span className="text-[10px] bg-stone-100 px-1.5 py-0.5 rounded-full">
                          {pokemon.tags.length} activité{pokemon.tags.length > 1 ? 's' : ''}
                        </span>
                      </div>
